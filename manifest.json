{
  "manifest_version": 3,
  "name": "URL Shortener",
  "version": "1.0",
  "description": "Shorten URLs with one click",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://is.gd/*",
    "https://v.gd/*",
    "https://tinyurl.com/*",
    "https://wa.me/*",
    "https://t.me/*",
    "https://www.facebook.com/*",
    "https://twitter.com/*",
    "https://reddit.com/*",
    "https://discord.com/*",
    "https://bsky.app/*",
    "https://www.threads.net/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Shortener"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open URL Shortener popup"
    }
  }
}