{
  "manifest_version": 3,
  "name": "ZIMO URL Shortener",
  "version": "1.0.1",
  "description": "Shorten URLs instantly with metadata extraction and history tracking",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/Extension+/Chrome Extension Icon.svg",
      "48": "assets/Extension+/Chrome Extension Icon.svg",
      "128": "assets/Extension+/Chrome Extension Icon.svg"
    }
  },
  "icons": {
    "16": "assets/Extension+/Chrome Extension Icon.svg",
    "48": "assets/Extension+/Chrome Extension Icon.svg",
    "128": "assets/Extension+/Chrome Extension Icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}